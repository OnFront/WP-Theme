<div class="about-us-payeye" data-js-about-us-payeye>
    <div class="container about-us-payeye__container">
        <div class="about-us-payeye__video-image-wrapper">

            <video width="100%" height="100%" autoplay playsinline muted="muted" loop controls controlsList="nodownload">
                <source src="https://static.payeye.com/WWW/payeye.mp4" type="video/mp4">
            </video>

        </div>
        <div class="about-us-payeye__content">
            <h2 class="heading-xl mb-12 mb-lg-24">{{ acf.heading }}</h2>
            <div class="mb-24">{{ acf.description }}</div>
            <div class="about-us-payeye__links">
                {% for acf in acf.links %}
                    {% include 'shared/button-outlined/button-outlined.twig' with {
                        class: 'button-outlined--small'
                    } %}
                {% endfor %}
            </div>
        </div>

        {{ svg(asset('shared/circle.svg'),'d-none d-lg-block about-us-payeye__circle') }}
    </div>
</div>
