<div class="customer-zone-video" data-js-customer-zone-video>
    <div class="container customer-zone-video__container">
        <div class="customer-zone-video__video-image-wrapper">

            <video width="100%" height="100%" autoplay playsinline muted="muted" loop controls controlsList="nodownload">
                <source src="https://static.payeye.com/WWW/payeye.mp4" type="video/mp4">
            </video>

        </div>
        <div>
            <h2 class="heading-xl mb-24 mb-lg-12">{{ acf.heading }}</h2>
            <div class="mb-24">{{ acf.description }}</div>
            {% include 'shared/button-solid/button-solid.twig' with {
                btn: acf.btn,
                attr: 'data-js-scroll-to'
            } %}
        </div>
    </div>
</div>
